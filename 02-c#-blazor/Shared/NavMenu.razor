@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenuBasicTasks = false;
    private bool expandSubMenuBranches = false;
    private bool expandSubMenuLoops = false;
    private bool expandSubMenuFunctions = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleSubmenuBasicTasks()
    {
        expandSubMenuBasicTasks = !expandSubMenuBasicTasks;
        if(expandSubMenuBasicTasks){
            expandSubMenuBranches = false;
            expandSubMenuLoops = false;
            expandSubMenuFunctions = false;
        }
    }

    private void ToggleSubmenuBranches()
    {
        expandSubMenuBranches = !expandSubMenuBranches;
        if(expandSubMenuBranches){
            expandSubMenuBasicTasks = false;
            expandSubMenuLoops = false;
            expandSubMenuFunctions = false;
        }
    }

    private void ToggleSubmenuLoops()
    {
        expandSubMenuLoops = !expandSubMenuLoops;
        if(expandSubMenuLoops){
            expandSubMenuBasicTasks = false;
            expandSubMenuBranches = false;
            expandSubMenuFunctions = false;
        }
    }

    private void ToggleSubmenuFunctions()
    {
        expandSubMenuFunctions = !expandSubMenuFunctions;
        if(expandSubMenuFunctions){
            expandSubMenuBasicTasks = false;
            expandSubMenuBranches = false;
            expandSubMenuLoops = false;
        }
    }

}
